%define rel @RELEASE@
%define version @VERSION@
%define pkgname @PACKAGE@

%define _libdir %_prefix/lib

%ifarch x86_64
%define _libdir %_prefix/lib64
%endif

Name: %{pkgname}
Version: %{version}
Release: %{rel}
License: GPL
Group: Applications/Databases
Summary: Java interface to RRDTool
Source: %{name}-%{version}.tar.gz
BuildRoot: %{_tmppath}/%{name}-%{version}-root

BuildRequires: rrdtool-devel (>= 1.5.0), jdk >= 1.5.0-1, gcc

%description
FIXME: better description  :)

%prep
%setup -n %{name}-%{version}

%build
%configure
make

%install
%makeinstall

%clean
if [ "$RPM_BUILD_ROOT" != "/" ]; then
	rm -rf "$RPM_BUILD_ROOT"
fi

%files
%attr(755,root,root) %{_libdir}/libjrrd*
%attr(644,root,root) %{_datadir}/java/*.jar

%changelog
* Mon Jul 16 2007 Benjamin Reed <ranger@opennms.org>
- initial package
